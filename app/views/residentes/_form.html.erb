      <ul>
      <% residente.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :matricula %>
    <%= f.text_field :matricula %>
  </div>

  <div class="field">
    <%= f.label :nome %>
    <%= f.text_field :nome %>
  </div>

  <div class="field">
    <% @cursos = Curso.all %>
    <%= f.label :curso_id %>
    <%= f.select :curso_id, @cursos.collect {|curso| [curso.nome, curso.id]} %>
  </div>

  <div class="field">
    <% @quartos = Quarto.all %>
    <%= f.label :quarto_id %>
    <%= f.select :quarto_id, @quartos.collect {|quarto| [quarto.numero.to_s + " - " + quarto.piso, quarto.id]} %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
