<%= form_for(user) do |f| %>
    <div class="form-group" style="border-bottom: double 1px #dddddd;">
      <div class="col-sm-10">
        <h3>Cadastrar conselheiro</h3>
      </div>
    </div>
    <% if user.errors.any? %>
        <ul>
          <% user.errors.full_messages.each do |message| %>
              <div class="row">
                <div class="col-lg-12">
                  <div class="alert alert-danger alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <i class="fa fa-info-circle"></i> <%= message %>
                  </div>
                </div>
              </div>
          <% end %>
        </ul>
    <% end %>

  <div class="form-group">
    <%= f.label :full_name %>
    <div class="col-sm-10">
      <%= f.text_field :full_name %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <div class="col-sm-10">
      <%= f.text_field :email %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <div class="col-sm-10">
      <%= f.password_field :password %>
    </div>
  </div>

    <div class="form-group">
      <% @quartos = Quarto.all %>
      <%= f.label :quarto_id %>
      <div class="col-sm-10">
        <%= f.select :quarto_id, @quartos.collect {|quarto| [quarto.numero.to_s + " - " + quarto.piso, quarto.id]} %>
      </div>
    </div>

  <div class="actions">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit %>
    </div>
  </div>
<% end %>
