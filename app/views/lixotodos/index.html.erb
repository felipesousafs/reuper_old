<script>
    document.getElementById("menu-tabelas").className = 'active';
</script>
<% flag = 0 %>
<table>
  <tbody>
  <% @lixotodos.each do |lixotodo| %>
    <% if flag%2 == 0 %>
      <div class="panel panel-default panel-lixotodo" style="border-top: none;">
        <div class="panel-heading" style="background: #333; color: #eeeeee">
          <h3 class="panel-title"><i class="fa fa-clock-o fa-tasks"></i> <%= lixotodo.data %></h3>
        </div>
        <div class="panel-body">
    <% end %>
          <div class="list-group row">
            <div class="col-lg-9">
              <a href="<%= lixotodo_path(lixotodo.id) %>" class="list-group-item">
                <i class="fa fa-fw fa-user"></i> <%= lixotodo.residente.nome %> &emsp;  &emsp;
                <i class="fa fa-fw fa-calendar"></i> <%= lixotodo.data %>
              </a>
            </div>
            <div class="col-md-3 list-group-item" style="border: none;">
              <% if user_signed_in? %>
                <a class="label label-default" href="<%= edit_lixotodo_path(lixotodo) %>">Editar</a>
                <%= link_to t('.destroy'), lixotodo, method: :delete, :class => 'label label-danger', data: { confirm: 'Tem certeza?' } %>
              <% else %>
                  <button class="label label-default btn" disabled="disabled">Editar</button>
                  <button class="label label-danger btn" disabled="disabled">Excluir registro</button>
              <% end %>
            </div>
          </div>
    <% if flag%2 != 0 %>
        </div>
      </div>
    <% end %>
    <% flag = flag+1 %>
  <% end %>
  <div class="text-right">
    <a href="#">Ver todos <i class="fa fa-arrow-circle-right"></i></a>
  </div>
  </tbody>
</table>